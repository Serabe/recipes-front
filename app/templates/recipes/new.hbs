<form>

  <div class="form-group">
      <label for="recipe_name">Name</label>
      {{input value=name
              class="form-control"
              placeholder="Recipe's name"
              id="recipe_name"}}
  </div>

  <div class="form-group">
      <label for="recipe_description">Description</label>
      {{counting-textarea componentValue=description
                          id="recipe_description"}}
  </div>

  <button class="btn btn-default"
          type="submit"
          {{bind-attr disabled=isModelNotValid}}
          {{action "createRecipe"}}>
          Create Recipe
  </button>
</form>
